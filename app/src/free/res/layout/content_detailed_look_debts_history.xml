<?xml version="1.0" encoding="utf-8"?>

<!--
Detailed Look Debts History w/ toggle button for today/year history
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Ad container -->
    <RelativeLayout
        android:id="@+id/adRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/adRelativeLayout"
        android:paddingBottom="@dimen/tracker_history_padding_small"
        android:paddingTop="@dimen/tracker_history_padding_small">

        <!-- Toggle Button -->
        <android.widget.Button
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:onClick="toggleButtonClick"
            android:text="@string/detailed_look_toggle_button" />

        <ListView
            android:id="@+id/detailedLookDebtHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/toggleButton"
            android:layout_alignParentTop="true"></ListView>

    </RelativeLayout>


</RelativeLayout>
