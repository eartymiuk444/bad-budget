<?xml version="1.0" encoding="utf-8"?>

<!--
DL Debts activity layout. Displays to the user in a table format all of their
debts in a single table with the values set to the value on the appropriate day
-->


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true">
    <!--
    Table for all the debts. Every cell uses a border with only the top, left, and
    bottom drawn except for the last column which has all borders. This table is added to
    dynamically.
    -->
    <TableLayout
        android:id="@+id/dlDebtAccountsTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/cell_height"
                android:layout_weight="1"
                android:background="@drawable/bordertbl"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/table_padding"
                android:text="@string/credit_cards_column_1"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/cell_height"
                android:layout_weight="1"
                android:background="@drawable/bordertbl"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/table_padding"
                android:text="@string/credit_cards_column_2"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/cell_height"
                android:layout_weight="1"
                android:background="@drawable/bordertbl"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/table_padding"
                android:text="@string/detailed_look_credit_cards_alt_column_3"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/cell_height"
                android:layout_weight="1"
                android:background="@drawable/borderfull"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/table_padding"
                android:text="@string/detailed_look_credit_cards_alt_column_4"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</ScrollView>

