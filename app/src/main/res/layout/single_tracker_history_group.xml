<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android.support.v7.cardview:cardElevation="@dimen/single_tracker_history_grouping_card_elevation"
    android.support.v7.cardview:cardPreventCornerOverlap="false"
    android.support.v7.cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/groupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding_generic"
            android:text="@string/tracker_history_grouping_date_placeholder" />

        <LinearLayout
            android:id="@+id/singleTrackerHistoryGroupingCardList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/groupTitle"
            android:orientation="vertical">
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
