<?xml version="1.0" encoding="utf-8"?>

<!--
Home Page Layout
-->

<!-- Single row with 2 columns -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.badbudget.erikartymiuk.badbudget.bbmain.HomeActivity"
    android:weightSum="2"
    >

    <!-- Column 1-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/generic_padding_medium"
        android:layout_marginEnd="@dimen/generic_padding_medium"
        >

            <!-- Slot 1 Cash Button -->
            <android.widget.Button
                android:id="@+id/cashButton"
                android:text="@string/cash_button_text"
                android:onClick="cashButtonClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebuttons"
                />

            <!-- Slot 2 Debts Button -->
            <android.widget.Button
                android:id="@+id/debtsButton"
                android:text="@string/debts_button_text"
                android:onClick="debtsButtonClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebuttons"
                />

            <!-- Slots 3 & 4 -->
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"/>

            <!-- Slot 5 Gains Button -->
            <android.widget.Button
                android:id="@+id/gainsButton"
                android:text="@string/gains_button_text"
                android:onClick="gainsButtonClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebuttons"
                />

            <!-- Slot 6 Losses Button -->
            <android.widget.Button
                android:id="@+id/lossesButton"
                android:text="@string/losses_button_text"
                android:onClick="lossesButtonClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebuttons"
                />

            <!-- Slots 7 & 8 -->
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"/>

            <!-- Slot 9 Budget (Set) Button -->
            <android.widget.Button
                android:id="@+id/budgetButton"
                android:text="@string/budget_button_text"
                android:onClick="budgetButtonClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebuttons"
                />

            <!-- Slot 10 Predict Button -->
            <android.widget.Button
                android:id="@+id/predictButton"
                android:text="@string/predict_button_text"
                android:onClick="predictButtonClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebuttons"
                />

        </LinearLayout>

        <!-- Column 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical"
            >

            <!-- Slot 1 Savings Button -->
            <android.widget.Button
                android:id="@+id/savingsButton"
                android:text="@string/savings_button_text"
                android:onClick="savingsButtonClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebuttons"
                />

            <!-- Slots 2, 3 & 4 -->
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"/>

            <!-- Slot 5 Transfers Button -->
            <android.widget.Button
                android:id="@+id/transfersButton"
                android:text="@string/transfers_button_text"
                android:onClick="transfersButtonClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebuttons"
                />

            <!-- Slots 6, 7 & 8 -->
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"/>

            <!-- Slot 9 Track Button -->
            <android.widget.Button
                android:id="@+id/trackButton"
                android:text="@string/track_button_text"
                android:onClick="trackButtonClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebuttons"
                />

            <!-- Slot 10 Summary Button -->
            <android.widget.Button
                android:id="@+id/summaryButton"
                android:text="@string/summary_button_text"
                android:onClick="summaryButtonClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/home_margins_vertical"
                android:layout_marginBottom="@dimen/home_margins_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebuttons"
                />
        </LinearLayout>

</LinearLayout>